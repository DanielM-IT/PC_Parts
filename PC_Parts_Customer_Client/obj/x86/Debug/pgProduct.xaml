<Page
    x:Class="PC_Parts_Customer_Client.pgProduct"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Background="#FFB2C7E8" FocusVisualPrimaryBrush="#FFDDE4EE">
        <Rectangle HorizontalAlignment="Left" Height="761" Margin="147,124,0,0" Stroke="Black" VerticalAlignment="Top" Width="1200" Fill="#FF618295"/>
        <Border BorderThickness="1" BorderBrush="Black" Margin="147,124,153,115"/>
        
        <!--Static Text-->
        <TextBlock x:ConnectionId='2' x:Name="tbTitle" TextAlignment="Center" HorizontalAlignment="Center" Margin="0,177,0,0" Text="Product" 
                   TextWrapping="Wrap" VerticalAlignment="Top" FontWeight="Bold" FontSize="28" Width="961" Foreground="Black"/>
        <TextBlock x:ConnectionId='3' x:Name="tbDescription" TextAlignment="Center" HorizontalAlignment="Center" Margin="0,247,0,0" Text="Product Description" 
                   TextWrapping="Wrap" VerticalAlignment="Top" FontWeight="Normal" FontSize="20" Width="960" Foreground="Black"/>
        <TextBlock x:ConnectionId='4' x:Name="tbProductId" HorizontalAlignment="Left" Margin="271,355,0,0" Text="Product ID:" TextWrapping="Wrap" 
                   VerticalAlignment="Top" FontSize="26" FontWeight="Bold" Foreground="Black"/>
        <TextBlock x:ConnectionId='5' x:Name="tbPrice" HorizontalAlignment="Left" Margin="271,425,0,0" Text="Price:" TextWrapping="Wrap" 
                   VerticalAlignment="Top" FontSize="26" FontWeight="Bold" Foreground="Black"/>
        <TextBlock x:ConnectionId='6' x:Name="tbQuantity" HorizontalAlignment="Left" Margin="271,491,0,0" Text="Qty:" TextWrapping="Wrap" 
                   VerticalAlignment="Top" FontSize="26" FontWeight="Bold" Foreground="Black"/>
        <TextBlock x:ConnectionId='7' x:Name="tbNoImage" HorizontalAlignment="Left" Margin="871,438,0,0" Text="No Image Available" TextWrapping="Wrap" 
                   VerticalAlignment="Top" FontSize="28" FontWeight="Bold" RenderTransformOrigin="0.5,0.5" Height="91" 
                   UseLayoutRounding="False" d:LayoutRounding="Auto" Width="142" Foreground="Black">
            <TextBlock.RenderTransform>
                <CompositeTransform SkewX="-1.102" TranslateX="-0.356"/>
            </TextBlock.RenderTransform>
        </TextBlock>

        <!--Dynamic Text-->
        <TextBlock x:ConnectionId='8' x:Name="tbDisplayedProductId" HorizontalAlignment="Left" Margin="486,355,0,0" Text="TextBlock" TextWrapping="Wrap" 
                   VerticalAlignment="Top" FontSize="26" Foreground="Black"/>
        <TextBlock x:ConnectionId='9' x:Name="tbDisplayedPrice" HorizontalAlignment="Left" Margin="486,425,0,0" Text="TextBlock" TextWrapping="Wrap" 
                   VerticalAlignment="Top" FontSize="26" Foreground="Black"/>
        <TextBlock x:ConnectionId='10' x:Name="tbDisplayedQuantity" HorizontalAlignment="Left" Margin="486,491,0,0" Text="TextBlock" TextWrapping="Wrap" 
                   VerticalAlignment="Top" FontSize="26" Foreground="Black"/>
        
        <!--Images-->
        <Image x:ConnectionId='11' x:Name="iProduct" HorizontalAlignment="Left" Height="358" Margin="825,355,0,0" VerticalAlignment="Top" Width="375">
            <Image.Source>
                <BitmapImage UriSource="{Binding ProductImage}" />
            </Image.Source>
        </Image>
        
        <!--Buttons-->
        <Button x:ConnectionId='12' x:Name="btnOrderProduct" Content="Order Product" Margin="388,662,0,0" FontSize="28" VerticalAlignment="Top" 
                                              Foreground="Black"/>
        <Button x:ConnectionId='13' x:Name="btnReturn" Content="Return" Margin="1202,803,0,0" FontSize="28" VerticalAlignment="Top" 
                                        Foreground="Black"/>
        
        <!--Content Control-->
        <ContentControl x:ConnectionId='14' x:Name="ctcProductSpecs" Content="ContentControl" HorizontalAlignment="Left" Margin="271,561,0,0" 
                        VerticalAlignment="Top" FontSize="26" FontWeight="Bold" Foreground="Black"/>
    </Grid>
</Page>

