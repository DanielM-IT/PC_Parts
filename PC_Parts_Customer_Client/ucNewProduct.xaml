<UserControl
    x:Class="PC_Parts_Customer_Client.ucNewProduct"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="63.39"
    d:DesignWidth="400">

    <Grid Margin="0,99,0,0">
        <!--Static Text-->
        <TextBlock x:Name="tbManufaturer" HorizontalAlignment="Left" Margin="1,-99,0,0" Text="Manufacturer:" TextWrapping="Wrap" 
                   VerticalAlignment="Top" FontSize="26" FontWeight="Bold" Foreground="Black"/>
        
        <!--Dynamic Text-->
        <TextBlock x:Name="tbDisplayManufacturer" HorizontalAlignment="Left" Margin="214,-99,0,0" Text="TextBlock" TextWrapping="Wrap" 
                   VerticalAlignment="Top" FontSize="26" FontWeight="Normal" Foreground="Black"/>
    </Grid>
</UserControl>
